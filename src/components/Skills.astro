---

<section id="tecnologias"  class="flex flex-col justify-center">
  <div class="flex gap-4 items-center "> 
    <img src="icons/brain.svg" alt="Icono alucivo a una rama de gitHub" class="w-10">
    <h2 class="capitalize text-slate-200 text-2xl font-bold">
      Tecnolog√≠as
    </h2>
  </div>

  {icons.map((icon) => 
  <article class="mt-12">
      <div class=" flex items-center gap-4">
        <div>
          <img src= {icon.url} alt="Icono html" class="w-12" >
        </div>
        <div class="w-4/5 relative">
          <p class="absolute right-0 text-slate-400  "> {icon.value < 6 ? 'Basico' : 'Intermedio'}</p>
          <label for="html" class="text-slate-100 font-bold"> {icon.name} </label>
          <meter id="html" value={icon.value} min="0" max="10"  class:list={['w-full rounded-2xl  overflow-hidden', { basico: icon.value < 7  } ]}  ></meter>
        </div>
      </div>
    </article>
  )}

</section>


<style>
  meter::-webkit-meter-bar{
    background-color: #DFC8FF;
    border: none;
    border-radius: .2rem;
  }
  meter::-webkit-meter-optimum-value{
    background-image: linear-gradient(90deg ,#340c69, #9964e4d0);
    border-radius: 0;
  }

 .basico::-webkit-meter-optimum-value{
    background-image: linear-gradient(90deg  , #a590c7db,#8b26a9);
  }

</style> 